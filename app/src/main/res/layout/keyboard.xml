<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/keyboard_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@color/grey"
        android:divider="@drawable/keyboard_divider"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">

        <TableRow style="@style/keyboard_row">

            <Button
                android:id="@+id/key_1"
                style="@style/keyboard_button"
                android:text="1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/key_2"
                style="@style/keyboard_number_button"
                android:text="2"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/key_3"
                style="@style/keyboard_number_button"
                android:text="3"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </TableRow>

        <TableRow style="@style/keyboard_row">

            <Button
                android:id="@+id/key_4"
                style="@style/keyboard_number_button"
                android:text="4"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/key_5"
                style="@style/keyboard_number_button"
                android:text="5"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/key_6"
                style="@style/keyboard_number_button"
                android:text="6"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </TableRow>

        <TableRow style="@style/keyboard_row">

            <Button
                android:id="@+id/key_7"
                style="@style/keyboard_number_button"
                android:textColor="@color/white"
                android:text="7"
                android:textStyle="bold"
                android:textSize="25sp" />

            <Button
                android:id="@+id/key_8"
                style="@style/keyboard_number_button"
                android:textColor="@color/white"
                android:text="8"
                android:textStyle="bold"
                android:textSize="25sp" />

            <Button
                android:id="@+id/key_9"
                style="@style/keyboard_number_button"
                android:textColor="@color/white"
                android:text="9"
                android:textStyle="bold"
                android:textSize="25sp" />
        </TableRow>

        <TableRow style="@style/keyboard_row">

            <Button
                android:id="@+id/key"
                style="@style/keyboard_number_button"
                android:textColor="@color/white"
                android:text="00"
                android:textStyle="bold"
                android:textSize="25sp" />

            <Button
                android:id="@+id/key_0"
                style="@style/keyboard_number_button"
                android:textColor="@color/white"
                android:text="0"
                android:textStyle="bold"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/key_x"
                style="@style/keyboard_number_button"
                android:src="@drawable/ic_baseline_backspace_24" />
        </TableRow>
    </TableLayout>

</merge>