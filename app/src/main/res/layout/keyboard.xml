<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/keyboard_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@color/white"
        android:divider="@drawable/keyboard_divider"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">

        <TableRow style="@style/keyboard_row">

            <Button
                android:id="@+id/key_1"
                style="@style/keyboard_button"
                android:text="@string/_1"
                android:textSize="25sp"
                android:textColor="@color/grey_keyboard_numbers"
                android:background="@drawable/button_color_clicked" />

            <Button
                android:id="@+id/key_2"
                style="@style/keyboard_number_button"
                android:text="@string/_2"
                android:textColor="@color/grey_keyboard_numbers"
                android:textSize="25sp"
                android:background="@drawable/button_color_clicked" />

            <Button
                android:id="@+id/key_3"
                style="@style/keyboard_number_button"
                android:text="@string/_3"
                android:textColor="@color/grey_keyboard_numbers"
                android:background="@drawable/button_color_clicked" />
        </TableRow>

        <TableRow style="@style/keyboard_row">

            <Button
                android:id="@+id/key_4"
                style="@style/keyboard_number_button"
                android:text="@string/_4"
                android:textColor="@color/grey_keyboard_numbers"
                android:textSize="25sp"
                android:background="@drawable/button_color_clicked"/>

            <Button
                android:id="@+id/key_5"
                style="@style/keyboard_number_button"
                android:text="@string/_5"
                android:textColor="@color/grey_keyboard_numbers"
                android:textSize="25sp"
                android:background="@drawable/button_color_clicked"/>

            <Button
                android:id="@+id/key_6"
                style="@style/keyboard_number_button"
                android:text="@string/_6"
                android:textColor="@color/grey_keyboard_numbers"
                android:textSize="25sp"
                android:background="@drawable/button_color_clicked"/>
        </TableRow>

        <TableRow style="@style/keyboard_row">

            <Button
                android:id="@+id/key_7"
                style="@style/keyboard_number_button"
                android:textColor="@color/grey_keyboard_numbers"
                android:text="@string/_7"
                android:textSize="25sp"
                android:background="@drawable/button_color_clicked"/>

            <Button
                android:id="@+id/key_8"
                style="@style/keyboard_number_button"
                android:textColor="@color/grey_keyboard_numbers"
                android:text="@string/_8"
                android:textSize="25sp"
                android:background="@drawable/button_color_clicked"/>

            <Button
                android:id="@+id/key_9"
                style="@style/keyboard_number_button"
                android:textColor="@color/grey_keyboard_numbers"
                android:text="@string/_9"
                android:textSize="25sp"
                android:background="@drawable/button_color_clicked"/>
        </TableRow>

        <TableRow style="@style/keyboard_row">

            <Button
                android:id="@+id/key"
                style="@style/keyboard_number_button"
                android:textColor="@color/grey_keyboard_numbers"
                android:text="@string/_00"
                android:textSize="25sp"
                android:background="@drawable/button_color_clicked"/>

            <Button
                android:id="@+id/key_0"
                style="@style/keyboard_number_button"
                android:textColor="@color/grey_keyboard_numbers"
                android:text="@string/_0"
                android:textSize="25sp"
                android:background="@drawable/button_color_clicked"/>

            <ImageButton
                android:id="@+id/key_x"
                style="@style/keyboard_number_button"
                android:src="@drawable/ic_baseline_backspace_24"
                android:contentDescription="key_x"
                android:background="@drawable/button_color_clicked"/>
        </TableRow>
    </TableLayout>

</merge>
